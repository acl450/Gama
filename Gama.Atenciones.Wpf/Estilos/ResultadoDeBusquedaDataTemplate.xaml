<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wrappers="clr-namespace:Gama.Atenciones.Wpf.Wrapper">
    <DataTemplate x:Key="ResultadoDeBusquedaTemplate"
                      DataType="{x:Type wrappers:PersonaWrapper}">
        <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="26" />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image Source="/Assets/user-128.png"
                           Margin="2"/>
                <TextBlock Grid.Column="1" 
                               Text="{Binding Nombre}" 
                               VerticalAlignment="Center" 
                               Padding="5"/>
                <TextBlock Grid.Column="2"
                               Text="{Binding Nombre}"
                               VerticalAlignment="Center" 
                               Padding="5"/>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>